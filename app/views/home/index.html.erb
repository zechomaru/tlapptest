                                <%= image_tag bundle.bundle.img.url, class: "hide_hover" %>
                                <%= image_tag bundle.bundle.imghover.url, class: "show_hover" %>
                                <h4 style="width: 50%;margin: 0 auto;"><%= bundle.bundle.name %></h4>
                            </div>
                        </div>
                    </a>
                <% end %>
            </div>
        </div>
    </section>

