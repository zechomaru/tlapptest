    <!-- service list -->
    <section id="service">
        <div class="container">
            <div class="row isotope-container">
                <% @pagesServices.each do |page| %>
                    <a class="service_link" href="service/<%= page.url %>">
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6 isotope-item <%= page.service.category.name %>">
                            <div class="service text-center">
                                <%= image_tag page.service.img.url, class: "hide_hover" %>
                                <%= image_tag page.service.imghover.url, class: "show_hover" %>
                                <h4 style="width: 50%;margin: 0 auto;"><%= page.service.name %></h4>
                            </div>
                        </div>
                    </a>
                <% end %>
                <% @pagesBundles.each do |bundle| %>
                    <a class="service_link" href="bundle/<%= bundle.url %>">
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6 isotope-item Paquete">
