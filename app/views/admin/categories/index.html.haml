%section.content-wrapper
  %section.content-header
    %h1 Cataegorias
  %section.content
    .row
      .col-xs-12
        .box
          .box-body.table-responsive.no-padding
            %table.table.table-hover
              %tbody
                %tr
                  %th Nombre
                  %th Fecha de creaci√≥n
                  %th{colspan: "2"} Acciones
              - @categories.each do |category|
                %tr
                  %td= category.name
                  %td= category.created_at.httpdate.to_date
                  %td 
                    = link_to edit_admin_category_path(category) do
                      %i.fa.fa-edit
                  %td
                    = link_to admin_category_path(category), method: :delete, data: { confirm: 'Esta seguro?' } do
                      %i.fa.fa-remove{style: "color: #B21919;"}