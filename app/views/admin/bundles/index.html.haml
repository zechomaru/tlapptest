%section.content-wrapper
  %section.content-header
    %h1 Todos los paquetes
  %section.content
    .row
      .col-xs-12
        .box
          .box-body.table-responsive.no-padding
            %table.table.table-hover
              %tbody
                %tr
                  %th Nombre
                  %th Servicios
                  %th Imagen
                  %th Imagen hover
                  %th Fecha de creaci√≥n
                  %th{colspan: "2"} Acciones
                - @bundles.each do |bundle|
                  %tr
                    %td= bundle.name
                    %td
                      - bundle.services.each do |service|
                        %li= service.name
                    %td= image_tag bundle.img.url(:thumb)
                    %td= image_tag bundle.imghover.url(:thumb)
                    %td= bundle.created_at.strftime('%d-%m-%y')
                    %td
                      = link_to edit_admin_bundle_path(bundle) do
                        %i.fa.fa-edit
                    %td
                      = link_to admin_bundle_path(bundle), method: :delete, data: { confirm: 'Esta seguro?' } do
                        %i.fa.fa-remove{style: "color: #B21919;"}